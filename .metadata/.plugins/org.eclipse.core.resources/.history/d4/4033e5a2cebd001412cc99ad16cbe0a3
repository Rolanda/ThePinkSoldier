import java.util.ArrayList;
import java.util.Collection;
import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.TreeMap;
import java.util.Set;
import java.util.HashSet;

public class Dictionnaire {
	Map<String, String> dico;
	
	public Dictionnaire(){
		this.dico = new TreeMap<String, String>();
	}
	
	public Dictionnaire(String[] fr, String[] eng) {
		this();
		for (int i = 0; i < fr.length; i++) {
			dico.put(fr[i], eng[i]);
		}
	}
	
	public void ajouter(String motFr, String motGb){
		this.dico.put(motFr, motGb);
	}
	
	public void retirer(String motFr){
		this.dico.remove(motFr);
	}
	
	public String traduireGb(String motFr){
		if(this.dico.containsKey(motFr)){
			return this.dico.get(motFr);
		}
		return null;
	}
	
	public String traduireFr(String motEng){
		Map<Set<String>, Collection<String>> dicoBis = new HashMap<Set<String>, Collection<String>>();
		
		Set<String> motFr = this.getMotFrancais();
		Collection<String> motEng = this.getMotAnglais();
		
		Iterator<String> it = motFr.iterator();
		Iterator<String> it2 = motEng.iterator();
		
		while (it.hasNext()) {
			String motfr = (String) it.next();
			String moteng = (String) it2.next();
			dicoBis.put(motfr, moteng);
		}
		
		return dicoBis.get(moteng); 
	}
	
	public Set<String> getMotFrancais(){
		Set<String> motFr = new HashSet<String>();
		motFr.addAll(dico.keySet());
		return motFr;
	}
	
	public Collection<String> getMotAnglais(){
		Collection<String> motEng = new ArrayList<String>();
		motEng.addAll(dico.values());
		return motEng;
	}
	
	public Set<Map.Entry<String, String>> getTraductions(){
		Set<Map.Entry<String, String>> traduction = new HashSet<Map.Entry<String, String>>();
		traduction.addAll(dico.entrySet());
		return traduction;
	}
	
	
	public String toString(){
		return dico.toString();
	}
}
