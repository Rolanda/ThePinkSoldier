import java.util.Scanner;


public class Calculatrice {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Integer somme1;
		Integer somme2;
		System.out.print("Entrer une somme : ");
		//somme1 = sc.nextInt();
		somme1 = null;
		System.out.print(" + ");
		//somme2 = sc.nextInt();
		Somme<Integer> calc = new Somme<Integer>(somme1, somme2);
		try {
			System.out.println(calc.toString());
		} catch (NullPointerException e) {
			e.printStackTrace();
		}
		finally{
			if(somme1 == null && somme2 == null){
				System.out.println("Entrer une somme(valide) : ");
				somme1 = sc.nextInt();
				System.out.print(" + ");
				somme2 = sc.nextInt();
				calc = new Somme<Integer>(somme1, somme2);
				System.out.println(calc.toString());
			}
		}
	}
}
