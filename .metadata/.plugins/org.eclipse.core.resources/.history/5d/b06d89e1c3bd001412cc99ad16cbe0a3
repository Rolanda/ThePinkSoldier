import java.util.Map;
import java.util.HashMap;

public class Etape {
	Map<String, Temps> course;
	public Etape(){
		this.course = new HashMap<String, Temps>();
	}
	
	public Etape(String[] coureur, Temps[] temps){
		this();
		for (int i = 0; i < coureur.length; i++) {
			this.course.put(coureur[i], temps[i]);
		}
	}
	
	public boolean modifierTemps(String coureur, Temps temps){
		if (this.course.containsKey(coureur)) {
			return true;
		}
		return false;
	}
	
	public Temps obtenirTemps(String coureur){
		if (this.course.containsKey(coureur)) {
			return this.course.get(coureur);
		}
		return null;
	}
	
	public String toString(){
		return this.course.toString();
	}
}
