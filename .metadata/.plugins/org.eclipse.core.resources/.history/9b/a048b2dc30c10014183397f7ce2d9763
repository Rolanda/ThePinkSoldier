import java.util.Scanner;


public class Menu {
	public static void main(String[] args) {
		int choix = 0;
		enteteDeMenu();
		System.out.println("(1) SinglePlayer.");
		System.out.println("(2) Multiplayer.");
		System.out.println("(3) Règles.");
		System.out.println("(Quitter) Quitter.");
		if (choix == 1) {
			enteteDeMenu();
			choixDeLaDifficulter();
		}
	}
	
	public static int choixDeLaDifficulter(){
		Scanner sc = new Scanner(System.in);
		int max = 0;
		String choix;
		System.out.println("Choix de la difficulté : ");
		System.out.println("(1) Facile (Entre 100 - 1000).");
		System.out.println("(2) Moyen (Entre 100 - 10000).");
		System.out.println("(3) Difficle  (Entre 100 - 25000).");
		System.out.println("(Quitter) Retour.");
		System.out.print("Choix : ");
		choix = sc.nextLine().toLowerCase();
		if (choix.charAt(0) == 1) {
			max = sc.nextInt(900) + 100;
		}
		else if (choix.charAt(0) == 2) {
			max = sc.nextInt(900) + 100;
		}
		else if (choix.charAt(0) == 3) {
			max = sc.nextInt(900) + 100;
		}
		else if (choix.equals("Quitter")) {
			max = sc.nextInt(900) + 100;
		}
		else {
			System.out.println("Reessayer ! ");
			choixDeLaDifficulter();
		}
		return max;
	}
	
	public static void enteteDeMenu(){
		System.out.println("==============================");
		System.out.println("======= Nombre Mystère =======");
		System.out.println("==============================");
	}
}
