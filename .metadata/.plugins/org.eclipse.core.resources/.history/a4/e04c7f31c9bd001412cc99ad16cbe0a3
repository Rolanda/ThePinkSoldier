import java.util.Collection;
import java.util.Map;
import java.util.TreeMap;
import java.util.Set;
import java.util.HashSet;

public class Dictionnaire {
	Map<String, String> dico;
	
	public Dictionnaire(){
		this.dico = new TreeMap<String, String>();
	}
	
	public Dictionnaire(String[] fr, String[] eng) {
		this();
		for (int i = 0; i < fr.length; i++) {
			dico.put(fr[i], eng[i]);
		}
	}
	
	public void ajouter(String motFr, String motGb){
		this.dico.put(motFr, motGb);
	}
	
	public void retirer(String motFr){
		this.dico.remove(motFr);
	}
	
	public String traduireGb(String motFr){
		if(this.dico.containsKey(motFr)){
			return this.dico.get(motFr);
		}
		return null;
	}
	
	public Set<String> getMotFrancais(){
		Set<String> motFr = new HashSet<String>();;
		this.motFr.addAll(dico.keySet());
		return this.motFr;
	}
	
	public Collection<String> getMotAnglais(){
		Collection<String> motEng
	}
	
//	public Set<Map.Entry<String, String>> getTraductions(){
//		Set<String>
//		return motTraduit;
//	}
	
	public String toString(){
		return dico.toString();
	}
}
