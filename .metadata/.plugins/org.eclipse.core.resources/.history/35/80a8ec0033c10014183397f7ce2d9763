import java.util.Scanner;


public class Menu {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int choix = 0, nombreChercher, nombreTrouver = 0;
		enteteDeMenu();
		System.out.println("(1) SinglePlayer.");
		System.out.println("(2) Multiplayer.");
		System.out.println("(3) Règles.");
		System.out.println("(Quitter) Quitter.");
		if (choix == 1) {
			enteteDeMenu();
			nombreChercher = choixDeLaDifficulter();
			System.out.println("Chercher le nombre Mystere ! ");
			while (nombreTrouver != nombreChercher) {
				System.out.println("Donne moi la papatte : ");
				nombreTrouver = sc.nextInt();
			}
		}
	}
	
	public static int choixDeLaDifficulter(){
		Scanner sc = new Scanner(System.in);
		int leNombreMystere = 0;
		String choix;
		System.out.println("Choix de la difficulté : ");
		System.out.println("(1) Facile (Entre 100 - 1000).");
		System.out.println("(2) Moyen (Entre 100 - 10000).");
		System.out.println("(3) Difficle  (Entre 100 - 25000).");
		System.out.println("(Quitter) Retour.");
		System.out.print("Choix : ");
		choix = sc.nextLine().toLowerCase();
		if (choix.charAt(0) == 1) {
			 leNombreMystere = sc.nextInt(900) + 100;
			 System.out.println("Vous avez décidez de joué la facilité ! ");
		}
		else if (choix.charAt(0) == 2) {
			 leNombreMystere = sc.nextInt(9000) + 100;
			 System.out.println("Je vois que ça joue avec les couilles ! ");
		}
		else if (choix.charAt(0) == 3) {
			 leNombreMystere = sc.nextInt(24900) + 100;
			 System.out.println("Ohoh !! Bonne chance l'ami ! ");
		}
		else if (choix.equals("quitter")) {
			 main(null);
		}
		else {
			System.out.println("Reessayer ! ");
			choixDeLaDifficulter();
		}
		return  leNombreMystere;
	}
	
	public static void enteteDeMenu(){
		System.out.println("==============================");
		System.out.println("======= Nombre Mystère =======");
		System.out.println("==============================");
	}
}
