//			return false;
//		return true;
//	}

	public Plateau(int taille, char table, boolean tableBis, int indice) {
		this.taille = taille;
		for (int i = 0; i < taille; i++) {
			for (int j = 0; j < taille; j++) {
				this.table[j][i] = table;
				if(this.table[j][i].equals(table.charAt(0))){
					this.tableBis[j][i] = tableBis;
				}
				else {
					this.tableBis[j][i] = true;
				}
			}
		}
		this.indice = indice;
	}
	

	/* (non-Javadoc)
	 * @see java.lang.Object#toString()
	 */
	@Override
	public String toString() {
		String res = "";
		for (int i = 0; i < this.taille; i++) {
			for (int j = 0; j < this.taille; j++) {
				res += this.table[j][i];
			}
			res += "\n";
		}
		return res;
	}
	
}
