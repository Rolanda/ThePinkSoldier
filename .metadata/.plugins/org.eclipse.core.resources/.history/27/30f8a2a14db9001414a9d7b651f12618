
public class Plateau {
	private int taille;
	char[][] table = new char[taille][taille];
	boolean[][] tableBis = new boolean[taille][taille];
	private int indice = 1;
	
//	public int hashCode() {
//		final int prime = 31;
//		int result = 1;
//		result = prime * result + Arrays.hashCode(table);
//		return result;
//	}
//	public boolean equals(Object obj) {
//		if (this == obj)
//			return true;
//		if (obj == null)
//			return false;
//		if (getClass() != obj.getClass())
