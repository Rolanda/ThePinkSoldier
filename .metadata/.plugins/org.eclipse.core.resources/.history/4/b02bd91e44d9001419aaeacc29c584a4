package entrepriseFormation.personnel;
import java.util.ArrayList;
import java.util.List;

import entrepriseFormation.entreprise.*;
import entrepriseFormation.formations.*;
/**
 * 
 * @author Mathieu
 *	Forme un responsable de Formation.
 */
public class ResponsableFormation extends Employe{

	private List<FormationProposee> listFormationProposees;
	/**
	 * Construit un responsable de formation.
	 * @param employe
	 */
	
	public ResponsableFormation(){
		super();
	}
	public ResponsableFormation(Employe employe) {
		super(employe.getNom(), employe.getPrenom(), employe.getAdresse(), employe.getSalaire());
		this.listFormationProposees = new ArrayList<FormationProposee>();
	}

	/* (non-Javadoc)
	 * @see java.lang.Object#toString()
	 */
	@Override
	public String toString() {
		return super.toString();
	}
	
	public void recevoirCatalogue(CatalogueFormation catalogueFormation){
		for (FormationProposee formationProposee : listFormationProposees) {
			FormationProposee ad = new FormationProposee(formationProposee.getIntitule(),
					formationProposee.getDateDebut(), formationProposee.getDur√©e());
			this.listFormationProposees.add(ad);
		}
		for (Employe employe : this.getEntreprise().getEmployes()) {
			for (FormationProposee formationProposee : this.listFormationProposees) {
				if (employe.suivreFormation()) {
					formationProposee.inscire(employe);
				}
			}
		}
	}
	
	
}
